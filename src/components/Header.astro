<header class="container-fluid">
    <div class="row">
        <div class="col-12 vh-100" id="bg-header">
            <nav class="navbar navbar-expand-lg top-fixed">
                <div class="container-fluid">
                    <a class="navbar-brand text-white" href="/">Candidato</a>
                    <button
                        class="navbar-toggler border-white custom-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup"
                        aria-controls="navbarNavAltMarkup"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                    >
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div
                        class="collapse navbar-collapse justify-content-end"
                        id="navbarNavAltMarkup"
                    >
                        <div class="navbar-nav">
                            <a
                                class="nav-link active text-white"
                                aria-current="page"
                                href="/">Inicio</a
                            >
                            <a class="nav-link text-white" href="/propuestas"
                                >Propuestas</a
